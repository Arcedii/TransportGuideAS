<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".finisch.SecondChange">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            app:srcCompat="@drawable/second_change_icon" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginLeft="65px"
            android:fontFamily="@font/montserrat_black"
            android:paddingTop="20px"
            android:text="How punctual should drivers be?"
            android:textSize="21sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95px"
            android:layout_marginTop="30px"
            android:backgroundTint="#AF000F"
            android:onClick="goNext"
            android:text="Very punctual"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95px"
            android:layout_marginTop="30px"
            android:backgroundTint="#AF000F"
            android:onClick="goNext"
            android:text="Averagely punctual"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95px"
            android:layout_marginTop="30px"
            android:backgroundTint="#AF000F"
            android:onClick="goNext"
            android:text="Not very punctual"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95px"
            android:layout_marginTop="30px"
            android:backgroundTint="#AF000F"
            android:onClick="goNext"
            android:text="Not at all punctual"
            android:textSize="17sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>