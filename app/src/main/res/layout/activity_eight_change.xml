<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".finisch.EightChange">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:srcCompat="@drawable/eight_icon" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85px"
            android:fontFamily="@font/montserrat_black"
            android:paddingTop="20px"
            android:text="What price range suits you best?"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95px"
            android:layout_marginTop="30px"
            android:backgroundTint="#AF000F"
            android:onClick="goNext"
            android:text="300-500 lei (MD)"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95px"
            android:layout_marginTop="30px"
            android:backgroundTint="#AF000F"
            android:onClick="goNext"
            android:text="500-700 lei (MD)"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95px"
            android:layout_marginTop="30px"
            android:backgroundTint="#AF000F"
            android:onClick="goNext"
            android:text="700-900 lei (MD)"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95px"
            android:layout_marginTop="30px"
            android:backgroundTint="#AF000F"
            android:onClick="goNext"
            android:text="from 900 and more lei (MD)"
            android:textSize="17sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>