<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".finisch.FourChange">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            app:srcCompat="@drawable/four_icon" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:fontFamily="@font/montserrat_black"
            android:paddingTop="20px"
            android:text="Which of these items is the most important to you?"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95px"
            android:layout_marginTop="30px"
            android:backgroundTint="#AF000F"
            android:onClick="goNext"
            android:text="Fast delivery of passengers to the place they need"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95px"
            android:layout_marginTop="30px"
            android:backgroundTint="#AF000F"
            android:onClick="goNext"
            android:text="Comfortable cabin of transport"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95px"
            android:layout_marginTop="30px"
            android:backgroundTint="#AF000F"
            android:onClick="goNext"
            android:text="Slow and calm ride"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95px"
            android:layout_marginTop="30px"
            android:backgroundTint="#AF000F"
            android:onClick="goNext"
            android:text="Pleasant driver"
            android:textSize="17sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>